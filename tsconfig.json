{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["es2022", "dom", "dom.iterable"],
		"paths": {
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/utils": ["src/utils/index.ts"],
			"@/types": ["src/types.ts"],
			"@/scripts/*": ["src/scripts/*"],
			"@/site-config": ["src/site.config.ts"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
